# Add your Python code here. E.g.
from microbit import *
import radio

radio.on()
radio.config(channel=10)

while True:
    gesture = accelerometer.current_gesture()
    if gesture == "face up":
        radio.send("down")
    elif gesture == "face down":
        radio.send("up")
    elif gesture == "left":
        radio.send('a')
    elif gesture == "right":
        radio.send('d')
    elif button_a.is_pressed():
        radio.send('+')
    elif button_b.is_pressed():
        radio.send('-')
